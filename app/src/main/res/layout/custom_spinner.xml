<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_spinner_add_category_layout">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custom_spinner_category_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_plus_black"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/custom_spinner_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/custom_spinner_category_image"
        android:layout_toRightOf="@+id/custom_spinner_category_image"
        android:text="@string/custom_spinner_add_category_text"
        android:textColor="@color/black"
        android:textSize="16sp" />

